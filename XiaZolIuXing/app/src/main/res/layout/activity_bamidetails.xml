<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"

    android:layout_height="match_parent"
    tools:context=".ui.main.activity.BamidetailsActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/back_black" />

        <TextView
            android:id="@+id/toolBar_title"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_19"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_9"
            android:text="@string/banmi_details"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_17"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/share_button" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_300"
        android:layout_margin="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_300">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_160"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_head"
                android:text="杨晨"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_22" />

            <ImageView
                android:id="@+id/iv_care"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_102"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@id/tv_name"
                android:scaleType="center"
                android:src="@mipmap/xin" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_135"
                android:src="@mipmap/vcx" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_167"
                android:layout_marginTop="@dimen/dp_133"
                android:text="东京"
                android:textColor="@color/c_FF999999"
                android:textSize="@dimen/dp_12" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_156"
                android:src="@mipmap/jhg" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="@dimen/dp_132"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_166"
                android:layout_marginTop="@dimen/dp_154"
                android:text="日本国家旅游局专栏作者"
                android:textColor="@color/c_FF999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="@dimen/dp_308"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="简介：我是杨晨，日本国家旅游局专栏作者。旅居
东京五年时间，遇到了太多美景和惊喜，感谢在这
里得到的一切。对于美的发现，永远是我“在路上”的动力。"
                android:maxLines="5"
                android:textColor="@color/C_FF666666"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_27"
        android:layout_marginBottom="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_20"
        app:tabGravity="center" />

    <FrameLayout
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
</android.support.v4.widget.NestedScrollView>