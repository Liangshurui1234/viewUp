<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_37"
        android:src="@mipmap/touxiang" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_toRightOf="@+id/img"
        android:text="@string/linxiaojie"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/sp_22" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="@dimen/dp_210"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_1"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_toRightOf="@+id/img"
        android:text="@string/gerenqianming" />

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_2"
        android:layout_marginRight="@dimen/dp_54"
        android:src="@mipmap/yigebi" />

    <TextView
        android:id="@+id/bianji"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_17"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_2"
        android:layout_marginRight="@dimen/dp_21"
        android:text="@string/bianji"
        android:textColor="@color/c_fa6a13"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:id="@+id/layou"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_122"
        android:layout_below="@id/text_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_59"
        android:background="@color/c_fa6a13">

        <TextView
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/sp_17"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/qianbao"
            android:textColor="@color/c_fefefe"

            />

        <TextView
            android:id="@+id/text_t"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="99"
            android:textColor="@color/c_fefefe"
            android:textSize="@dimen/dp_58" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_toRightOf="@id/text_t"
            android:text="元"
            android:textColor="@color/c_fefefe"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_27"
            android:text="赢取奖金 > >"
            android:textColor="@color/c_fefefe" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/ka2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layou"
        android:layout_margin="10dp"
        android:layout_marginTop="@dimen/dp_39"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_marginTop="@dimen/dp_25"
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_s"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_27"
                    android:src="@mipmap/kajuan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/img_s"
                    android:text="我的卡卷" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="@dimen/dp_11"
                    android:layout_alignParentRight="true"

                    android:layout_marginRight="22dp"
                    android:src="@mipmap/fangwei" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/img_s"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/colorAccent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/card"
                android:id="@+id/menu_buy"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_ss"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_27"
                    android:src="@mipmap/che" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"

                    android:layout_toRightOf="@id/img_ss"
                    android:text="已购行程" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="@dimen/dp_11"
                    android:layout_alignParentRight="true"

                    android:layout_marginRight="22dp"
                    android:src="@mipmap/fangwei" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/img_ss"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/colorAccent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_17"
                android:id="@+id/shoucang"
                android:layout_below="@+id/menu_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_sss"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_27"
                    android:src="@mipmap/xinxin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/img_sss"
                    android:text="我的收藏" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="@dimen/dp_11"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22dp"
                    android:src="@mipmap/fangwei" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/img_sss"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/colorAccent" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/guanzhu"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_below="@id/shoucang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_ssss"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_27"
                    android:src="@mipmap/xinxin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/img_ssss"
                    android:text="我的关注" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="@dimen/dp_11"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22dp"
                    android:src="@mipmap/fangwei" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/img_ssss"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="18dp"
                   />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/img_reji"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@id/ka2"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_120"
        android:src="@mipmap/reji" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ka2"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_toRightOf="@id/img_reji"
        android:text="联系客服"
        android:textColor="@color/c_373737"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/img_yijian"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@id/ka2"
        android:layout_marginLeft="@dimen/dp_126"
        android:layout_marginTop="@dimen/dp_120"
        android:src="@mipmap/yijian" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ka2"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_toRightOf="@id/img_yijian"
        android:text="意见反馈"
        android:textColor="@color/c_373737"
        android:textSize="@dimen/sp_12"

        />

    <ImageView
        android:id="@+id/img_tanhao"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ka2"
        android:layout_marginRight="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_120"
        android:src="@mipmap/tanhao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ka2"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_120"
        android:text="版本检测"
        android:textColor="@color/c_373737"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>
