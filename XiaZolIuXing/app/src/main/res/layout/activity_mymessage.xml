<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.activity.MymessageActivity">

    <LinearLayout
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_fefefe">

            <TextView
                android:id="@+id/tesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="个人信息"
                android:textColor="@color/c_333333" />

        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <TextView
        android:id="@+id/te"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sv"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:text="获取途径"
        android:textSize="@dimen/sp_12" />

    <android.support.v7.widget.CardView
        android:id="@+id/ka"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_below="@id/te"
        android:layout_margin="10dp"
        android:layout_marginTop="@dimen/dp_39"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/lv_tou"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_18"
        android:text="头像"
        android:textColor="@color/c_333333" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@mipmap/touxiang" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/img"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="6dp"
        android:background="@color/c_d8d8d8" />


</RelativeLayout>
            <RelativeLayout
                android:id="@+id/lv_name"
                android:layout_width="match_parent"
                android:layout_below="@id/lv_tou"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_17"
                    android:text="用户昵称"
                    android:textColor="@color/c_333333" />

                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_17"
                    android:text="伴小米"
                    android:textColor="@color/c_999" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text_1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/c_d8d8d8" />


            </RelativeLayout>
           <RelativeLayout
               android:id="@+id/lv_sex"
               android:layout_width="match_parent"
               android:layout_below="@id/lv_name"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_17"
                   android:text="性别"
                   android:textColor="@color/c_333333" />

               <TextView
                   android:id="@+id/text_2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"

                   android:layout_marginRight="@dimen/dp_14"
                   android:layout_marginTop="@dimen/dp_17"
                   android:text="保密"
                   android:textColor="@color/c_999" />

               <View
                   android:layout_width="fill_parent"
                   android:layout_height="1dp"
                   android:layout_below="@id/text_2"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="6dp"
                   android:background="@color/c_d8d8d8" />



           </RelativeLayout>
           <RelativeLayout
             android:id="@+id/lv_gexing"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/lv_sex"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_15"
                   android:text="个性签名"
                   android:textColor="@color/c_333333" />

               <TextView
                   android:id="@+id/text_3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"

                   android:layout_marginRight="@dimen/dp_14"
                   android:layout_marginTop="@dimen/dp_15"
                   android:text="四肢不全五肢"
                   android:textColor="@color/c_999" />

           </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ka2"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_below="@id/ka"
        android:layout_margin="10dp"
        android:layout_marginTop="@dimen/dp_39"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/teste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18"
                android:text="修改密码"
                android:textColor="@color/c_333333" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/teste"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="6dp"
                android:background="@color/c_d8d8d8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teste"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_24"
                android:text="绑定手机"
                android:textColor="@color/c_333333" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/but11"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/ka2"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@drawable/yuanjiao"
        android:text="退出登录" />
</RelativeLayout>